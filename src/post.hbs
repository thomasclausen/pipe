{{!< default}}

{{#post}}
	{{#contentFor "meta-facebook"}}
		<meta property="og:type" content="article" />
		<meta property="article:publisher" content="https://www.facebook.com/facebookusername" />
		<meta property="article:author" content="https://www.facebook.com/facebookusername" />
		<meta property="article:published_time" content="{{date format='YYYY-MM-DD'}}" />
		{{#foreach post.tags}}
			<meta property="article:tag" content="{{name}}" />
		{{/foreach}}
	{{/contentFor}}

